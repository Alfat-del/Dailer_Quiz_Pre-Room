<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="9dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="-6dp">

        <LinearLayout
            android:id="@+id/ll_tugasselesaiexpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="9dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_tugasselesaipelajaran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pelajaran"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_tugasselesaitopik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Topik"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_tugasselesaideadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deadline"
                        android:textSize="11sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_tugasselesaidropdown"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dropdown"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>



            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_tugasselesaiexpandablecontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tugasselesaikategori"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="Kategori"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/tv_tugasselesaicatatan"
                    android:layout_below="@id/tv_tugasselesaikategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"/>


                <ImageView
                    android:id="@+id/iv_tugasselesaicheck"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/tv_tugasselesaicatatan"
                    android:src="@drawable/back"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/iv_tugasselesaidelete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/tv_tugasselesaicatatan"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/delete"
                    tools:ignore="NotSibling" />

            </RelativeLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>